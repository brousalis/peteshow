<!doctype html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Peteshow.js Tests</title>
    <link rel='stylesheet' href='stylesheets/peteshow.css'>
    <style>
      body { padding-left: 200px; }
      input[name=first_name] { border: 2px solid red; }
    </style>
  </head>
  <body>
    <form name='random'>
      <input name='password' type='password' />
      <input name='text' type='text' />
      <input name='email' type='email' />
      <input name='number' type='number' >
      <input name='decimal' type='number' >
      <input name='date ' type='date' >
      <input name='phone' type='tel' />
      <input name='first_name' type='text' />
      <input name='middle_name' type='text' />
      <input name='custom_name' type='text' />
      <input name='last_name' type='text' />
      <input name='company' type='text' />
      <input name='street' type='text' />
      <input name='line1' type='text' />
      <input name='line2' type='text' />
      <input name='city' type='text' />
      <input name='suite' type='text' />
      <input name='zip' type='number' />
      <input name='county' type='text' />
      <input name='postal' type='text' />
      <input name='state' type='text' />
      <input name='job_title' type='text' />
      <input name='intent' type='text' />
      <input name='income' type='number' />
      <input name='amount' type='number' />
      <input name='routing' type='number' />
      <input name='branch' type='number' />
      <input name='card_type_cd' type='text' />
      <input name='card_number' type='number' />
      <input name='cvv' type='number' />
      <input name='saved' type='text' />
      <input name='saved_2' type='text' />
      <input name='ignore_me' type='text' />

      <p>How often are you paid?</p>

      <dl class="refine frequency biweekly disabled">
          <dt class="refinement"><input id="paydates_frequency_biweekly" name="paydates[frequency]" value="biweekly" type="radio"><label for="paydates_frequency_biweekly">Every other week</label></dt>
          <dd class="refinement-options">
              <p class="refinement-option">
                  I get paid every other week on
                  <select id="paydates_biweekly_day_of_week" name="paydates[biweekly][day_of_week]">
                      <option value="">Select ...</option>
                      <option value="Monday">Monday</option>
                      <option value="Tuesday">Tuesday</option>
                      <option value="Wednesday">Wednesday</option>
                      <option value="Thursday">Thursday</option>
                      <option value="Friday">Friday</option>
                  </select>
              </p>

              <p class="refinement-option">
                  My next pay date is
                  <select id="paydates_biweekly_next_paydate" name="paydates[biweekly][next_paydate]">
                      <option value="">Select ...</option>
                      <option data-day-of-week="Tuesday" value="2014-08-19">August 19, 2014</option>
                      <option data-day-of-week="Tuesday" value="2014-08-26">August 26, 2014</option>
                  </select>
              </p>
          </dd>
      </dl>

      <dl class="refine frequency twice-monthly">
          <dt class="refinement"><input id="paydates_frequency_twice_monthly" name="paydates[frequency]" value="twice_monthly" type="radio"><label for="paydates_frequency_twice_monthly">Twice per month</label></dt>
          <dd class="refinement-options">
              <p class="refinement-option">
                  I get paid on
                  <select id="paydates_twice_monthly_ordinal" name="paydates[twice_monthly][ordinal]">
                      <option value="">Select ...</option>
                      <option value="1;15">the 1st and 15th of every month</option>
                      <option value="1;16">the 1st and 16th of every month</option>
                      <option value="5;20">the 5th and 20th of every month</option>
                      <option value="7;22">the 7th and 22nd of every month</option>
                      <option value="10;25">the 10th and 25th of every month</option>
                      <option value="15;-1">the 15th and last day of every month</option>
                  </select>
              </p>
          </dd>
      </dl>

      <dl class="refine frequency monthly disabled">
          <dt class="refinement"><input id="paydates_frequency_monthly" name="paydates[frequency]" value="monthly" type="radio"><label for="paydates_frequency_monthly">Once per month</label></dt>
          <dd class="refinement-options">
              <dl class="refine monthly-specific disabled">
                  <dt class="refinement"><input id="paydates_monthly_type_specific_date" name="paydates[monthly][type]" value="specific_date" type="radio"><label for="paydates_monthly_type_specific_date">the <em>same day</em> every month, e.g., the 1st of the month, the 15th of the month, or the last day of the month</label></dt>
                  <dd class="refinement-options">
                      <p class="refinement-option">
                          I get paid on the
                          <select id="paydates_monthly_specific_date_ordinal" name="paydates[monthly][specific_date_ordinal]">
                              <option value="">Select ...</option>
                              <option value="1">1st</option>
                              <option value="2">2nd</option>
                              <option value="3">3rd</option>
                              <option value="4">4th</option>
                              <option value="5">5th</option>
                              <option value="6">6th</option>
                              <option value="7">7th</option>
                              <option value="8">8th</option>
                              <option value="9">9th</option>
                              <option value="10">10th</option>
                              <option value="11">11th</option>
                              <option value="12">12th</option>
                              <option value="13">13th</option>
                              <option value="14">14th</option>
                              <option value="15">15th</option>
                              <option value="16">16th</option>
                              <option value="17">17th</option>
                              <option value="18">18th</option>
                              <option value="19">19th</option>
                              <option value="20">20th</option>
                              <option value="21">21st</option>
                              <option value="22">22nd</option>
                              <option value="23">23rd</option>
                              <option value="24">24th</option>
                              <option value="25">25th</option>
                              <option value="26">26th</option>
                              <option value="27">27th</option>
                              <option value="28">28th</option>
                              <option value="29">29th</option>
                              <option value="30">30th</option>
                              <option value="-1">last day</option>
                          </select>
                          of the month
                      </p>
                  </dd>
              </dl>

              <dl class="refine monthly-relative disabled">
                  <dt class="refinement"><input id="paydates_monthly_type_relative_date" name="paydates[monthly][type]" value="relative_date" type="radio"><label for="paydates_monthly_type_relative_date">the <em>same day of a particular week</em> every month, e.g., the 3rd Monday of every month or the last Friday of every month</label></dt>
                  <dd class="refinement-options">
                      <p class="refinement-option">
                          I get paid on the
                          <select id="paydates_monthly_relative_date_ordinal" name="paydates[monthly][relative_date_ordinal]">
                              <option value="">Select ...</option>
                              <option value="1">1st</option>
                              <option value="2">2nd</option>
                              <option value="3">3rd</option>
                              <option value="4">4th</option>
                              <option value="-1">last</option>
                          </select>
                          <select id="paydates_monthly_relative_date_day_of_week" name="paydates[monthly][relative_date_day_of_week]">
                              <option value="">Select ...</option>
                              <option value="Monday">Monday</option>
                              <option value="Tuesday">Tuesday</option>
                              <option value="Wednesday">Wednesday</option>
                              <option value="Thursday">Thursday</option>
                              <option value="Friday">Friday</option>
                          </select>
                          of every month
                      </p>
                  </dd>
              </dl>

          </dd>
      </dl>

      <dl class="refine frequency weekly disabled">
          <dt class="refinement"><input id="paydates_frequency_weekly" name="paydates[frequency]" value="weekly" type="radio"><label for="paydates_frequency_weekly">Once per week</label></dt>
          <dd class="refinement-options">
              <p class="refinement-option">
                  I get paid every week on
                  <select id="paydates_weekly_day_of_week" name="paydates[weekly][day_of_week]">
                      <option value="">Select ...</option>
                      <option value="Monday">Monday</option>
                      <option value="Tuesday">Tuesday</option>
                      <option value="Wednesday">Wednesday</option>
                      <option value="Thursday">Thursday</option>
                      <option value="Friday">Friday</option>
                  </select>
              </p>
          </dd>
      </dl>

      <dl class="preferences">
        <dt>Select preferences</dt>
        <dd>
          <label><input type="checkbox" name="all-email"     value="1"> Spam me             </label>
          <label><input type="checkbox" name="some-emal"     value="1"> Send me some emails </label>
          <label><input type="checkbox" name="few-email"     value="1"> only important info </label>
          <label><input type="checkbox" name="nothing-email" value="1"> Don't you dare      </label>
          <label><input type="checkbox" name="boolean_checkbox" value="1"> Boolean Checkbox </label>
        </dd>
      </dl>

      <input id="paydates_submitted" name="paydates[submitted]" value="true" type="hidden">
    </form>

    <script src='vendor/jquery.js'></script>
    <script src='vendor/faker.js'></script>
    <script src='vendor/jquery.formatDateTime.js'></script>
    <script src='vendor/jquery.cookie.js'></script>
    <script src='javascripts/peteshow.js'></script>
    <script>
      if ('<%= env %>' != 'test') {
        Peteshow.init({
          cookies: true,
          rules: {
            "input[name*=middle_name]": Peteshow.random.name(),
            "input[name*=custom_name]": 'Custom Name'
          },
          reuse: { 'input[name*=first_name]': '/tests' },
          ignore : ['input[name=last_name]', '#qunit-modulefilter']
        });
      }
    </script>
  </body>
</html>
